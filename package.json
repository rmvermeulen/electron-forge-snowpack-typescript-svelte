{
  "name": "electron-turbo-template",
  "version": "1.0.0",
  "description": "Extreme DX: electron-forge + typescript + snowpack + svelte",
  "main": "build/main",
  "scripts": {
    "start": "electron-forge start",
    "start:dev": "yarn start -- -- dev",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "test": "jest",
    "dev": "concurrently npm:start:dev npm:dev:renderer",
    "dev:main": "yarn build:main --watch",
    "dev:renderer": "snowpack dev",
    "build": "concurrently npm:build:main npm:build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "snowpack build"
  },
  "private": true,
  "keywords": [],
  "author": {
    "name": "Rasmus Vermeulen",
    "email": "rasmus_vermeulen@tutanota.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "minimal_setup"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "svelte": "^3.24.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.53",
    "@electron-forge/maker-deb": "6.0.0-beta.53",
    "@electron-forge/maker-rpm": "6.0.0-beta.53",
    "@electron-forge/maker-squirrel": "6.0.0-beta.53",
    "@electron-forge/maker-zip": "6.0.0-beta.53",
    "@snowpack/app-scripts-svelte": "^1.8.4",
    "@snowpack/plugin-run-script": "^2.1.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/svelte": "^3.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/jest": "^26.0.13",
    "@types/snowpack-env": "^2.3.0",
    "concurrently": "^5.3.0",
    "electron": "10.1.1",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "snowpack": "^2.10.1",
    "svelte-check": "^1.0.35",
    "svelte-preprocess": "^4.2.1",
    "typescript": "^4.0.2"
  }
}
